%div.message_container
  %div.message
    %p
      %span.hidden_message=message.message
      %span.id=message.id
      =form_for message do |f|
        =f.hidden_field :deleted, value:true
        %span.delete=link_to "[X]","#",:onclick => "$('#edit_#{dom_id(message)}').submit()"
      %span.date=date_for_inbox(message)
      %span.from=link_to message.from.full_name, message.from
      %span.subject{:class => subject_link_weight(message)}=link_to message.subject
  %div.read_message.white_box
    %p.message=simple_format(message.message)
    %p.reply=link_to "Reply"

